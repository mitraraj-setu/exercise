<?xml version="1.0"?>
<odoo>

        <record id="university_teacher_tree_view" model="ir.ui.view">
            <field name="name">university.teacher.tree</field>
            <field name="model">university.teacher</field>
            <field name="arch" type="xml">
                <tree string="Teach" expand="True">
                    <field name="code"/>
                    <field name="firstname"/>
                    <field name="lastname"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="date_of_birth" optional="hide"/>
                    <field name="joining_date" optional="hide"/>
                    <field name="subject"/>
                    <field name="teacher_aadhaar_no" optional="hide"/>
                    <field name="student_pass_ratio"/>
                </tree>
            </field>
        </record>

        <record id="university_pass_student_count_action" model="ir.actions.act_window">
            <field name="name">Pass Students</field>
            <field name="res_model">university.student</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="university_fail_student_count_action" model="ir.actions.act_window">
            <field name="name">Fail Students</field>
            <field name="res_model">university.student</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="university_total_student_count_action" model="ir.actions.act_window">
            <field name="name">Total Students</field>
            <field name="res_model">university.student</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="university_teacher_form_view" model="ir.ui.view">
            <field name="name">university.teacher.form</field>
            <field name="model">university.teacher</field>
            <field name="arch" type="xml">
                <form string="Teacher">
                    <sheet>
                        <h1>
                            <field name="code"/>
                        </h1>
                        <div name="button_box" class="oe_button_box">
                            <button class="oe_stat_button" type="object" string="Pass" name="button_university_pass_student_count"
                                    attrs="{'invisible': [('pass_students_count', '=', 0)]}" icon="fa-file-text-o">
                                <field name="pass_students_count"/>
                            </button>
                            <button class="oe_stat_button" type="object" string="Fail" name="button_university_fail_student_count"
                                    attrs="{'invisible': [('fail_students_count', '=', 0)]}" icon="fa-file-text-o">
                                <field name="fail_students_count"/>
                            </button>
                            <button class="oe_stat_button" type="object" string="Total Students" name="button_university_total_student_count"
                                    attrs="{'invisible': [('total_students_count', '=', 0)]}" icon="fa-file-text-o">
                                <field name="total_students_count"/>
                            </button>
                        </div>
                        <separator/>
                        <group>
                            <group>
                                <field name="firstname"/>
                                <field name="phone"/>
                                <field name="date_of_birth"/>
                                <field name="subject"/>
                                <field name="student_pass_ratio"/>
                            </group>
                            <group>
                                <field name="lastname"/>
                                <field name="email"/>
                                <field name="joining_date"/>
                                <field name="teacher_aadhaar_no"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="university_teacher_action" model="ir.actions.act_window">
            <field name="name">Teachers</field>
            <field name="res_model">university.teacher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="university_teacher_root_menu" name="University Teacher" action="university_teacher_action"/>

</odoo>